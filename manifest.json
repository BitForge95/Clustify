{
  "manifest_version": 2,

  "name": "Clustify",
  "version": "1.1",
  "description": "Delete emails by keyword and AI-assisted auto labeling (Groq LLaMA).",
  "permissions": [
    "identity",
    "storage",
    "https://gmail.googleapis.com/*",
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://api.groq.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    },
    "default_title": "MailPilot Cleanup",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mailpilot-cleanup@example.com"
    }
  }
}
